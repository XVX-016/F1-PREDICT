# Production Environment Variables for f1predictapp.tech
NODE_ENV=production

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=f1_prediction_market_prod
DB_USER=f1predict_user
DB_PASSWORD=your_secure_db_password_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this_in_production

# Frontend URL
FRONTEND_URL=https://f1predictapp.tech

# Redis Configuration
REDIS_URL=redis://redis:6379

# Payment Integration (NowPayments)
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_PUBLIC_KEY=your_nowpayments_public_key
NOWPAYMENTS_API_SECRET=your_nowpayments_api_secret

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/f1predictapp.tech.crt
SSL_KEY_PATH=/etc/nginx/ssl/f1predictapp.tech.key

# Domain Configuration
DOMAIN_NAME=f1predictapp.tech
WWW_DOMAIN=www.f1predictapp.tech

# Security
CORS_ORIGIN=https://f1predictapp.tech
ALLOWED_ORIGINS=https://f1predictapp.tech,https://www.f1predictapp.tech

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# ML Service Configuration
ML_SERVICE_URL=http://ml-service:8000
ML_MODEL_PATH=/app/models

# Cache Configuration
CACHE_TTL=3600
REDIS_MAX_MEMORY=256mb
