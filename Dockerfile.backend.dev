# Backend Development Dockerfile
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY project/backend/package*.json ./

# Install dependencies including dev dependencies
RUN npm ci

# Copy source code
COPY project/backend/src ./src
COPY project/backend/data ./data

# Create data directory
RUN mkdir -p data

# Expose ports for API and WebSocket
EXPOSE 3001 3002

# Start development server with nodemon
CMD ["npm", "run", "dev"]
