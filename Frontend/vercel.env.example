# Vercel Environment Variables for F1 Predict App
# Copy these to your Vercel project settings

# Application
NODE_ENV=production
VITE_APP_NAME=F1 Predict App
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_URL=/api
VITE_WS_URL=wss://f1-predict-app.vercel.app/socket.io
VITE_ML_SERVICE_URL=/api/ml

# Domain Configuration
VITE_DOMAIN=f1-predict-app.vercel.app
VITE_APP_URL=https://f1-predict-app.vercel.app

# Features
VITE_ENABLE_PREDICTIONS=true
VITE_ENABLE_BETTING=false
VITE_ENABLE_CALIBRATION=true

# External APIs (if needed)
VITE_ERGAST_API_URL=https://ergast.com/api/f1
VITE_FASTF1_API_URL=https://api.fastf1.com

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_VERCEL_ANALYTICS_ID=

# Debug
VITE_DEBUG=false
VITE_VERBOSE_LOGGING=false
